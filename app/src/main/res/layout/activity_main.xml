<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:orientation="vertical">

    <Button

        android:id="@+id/button1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="..."
        android:layout_marginRight="35dp"
        android:textColor="#000000"
        android:background="@drawable/button_shape1"
        android:layout_gravity="right"/>
    <ImageView
        android:id="@+id/img1"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:src="@drawable/log1" />

    <RelativeLayout
        android:id="@+id/login_div"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dip"
        android:layout_margin="15dip" >
        <TextView
            android:id="@+id/text_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:text="账 户 ："/>

        <EditText
            android:id="@+id/edit_text1"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxLength="16"
            android:inputType="text"
            android:layout_below="@id/text_view1"
            android:hint=""
            android:textColor="#000000"
            android:textSize="20dp"
            android:background="@drawable/editview_shape2"/>
        <!-- 密码 text -->
        <TextView
            android:id="@+id/text_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_text1"
            android:layout_marginTop="3dp"
            android:textColor="#000000"
            android:text="密 码 ："/>

        <EditText
            android:id="@+id/edit_text2"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxLength="16"
            android:inputType="textPassword"
            android:layout_below="@id/text_view2"
            android:hint=""
            android:textColor="#000000"
            android:textSize="20dp"
            android:background="@drawable/editview_shape2"/>
        <!-- 登录button -->
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_text2"
            android:layout_alignRight="@id/edit_text2"
            android:background="@drawable/button_shape"
            android:text="登录"
            android:textColor="#000000"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_text2">

            <CheckBox
                android:id="@+id/Login_Remember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="记住密码"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:checked="false" />

        </LinearLayout>

    </RelativeLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/log2" />
        <ImageView
            android:id="@+id/img3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:src="@drawable/log3" />
    </TableLayout>

</LinearLayout>
